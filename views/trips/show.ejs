<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<%- include('../partials/trip-header') %>

<div class="trip-route uniform-padding">
    <div class="flex-form">
        <div class="route">
            <% if (trip.destinations.length > 0) { %>
                <% trip.destinations.forEach(function(d) { %>
                    <div value="<%= d.arrivesBy %>" class="traval-icons"></div>
                    <div> <a class="clean-anchor" href="/destinations/<%=d._id%>"><%= d.location %></a> </div>
                <% }) %>
            <% } else { %>
                you haven't added any destination details yet!
            <% } %>
        </div>
        <div class="flex-form-submit">
            <a href="/trips/<%= trip._id %>/destinations/new" class="clean-anchor">
                <div class="form-submit-div animate-btn circle-btn seashell">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
                    </svg>
                </div>
            </a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>