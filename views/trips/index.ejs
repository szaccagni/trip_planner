<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<% if (trips.length > 0) { %>
    <div class="trips-container">
    <% trips.forEach(function(t) { %>
        <div class="trip-square">
            <a href="/trips/<%= t._id %>">
                <div class="trip-img trip-img-pad">
                    <img src="<%= t.imgURL %>">
                </div>
                <div class="trip-square-text">
                    <span><%= t.macroLocation %></span>
                    <span class="trashcan hide">
                        <form action="/trips/<%= t._id %>?_method=DELETE" method="POST">
                            <label>
                            <input style="display:none" type="submit" onclick="return confirm('Are you sure you want to delete this trip?')">
                            <div class="form-submit-div animate-btn circle-btn red home-delete-btn" style="cursor:pointer">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                </svg>  
                            </div>        
                           </label>
                        </form>
                    </span>
                </div>
            </a>
        </div>
    <% }) %>
        <a href="/trips/new" class="trip-square sq-empty" >
            <div>
                <span>create a new trip</span>
            </div>
        </a>
    </div>
<% } else { %> 
    <div class="home-pg-empty uniform-margin">
        <div>
            <img src="https://i.imgur.com/YuefDHi.png">
        </div>
        <div id="home-pg-empty-btn">
            <a href="/trips/new" class="clean-anchor">
                <div class="home-pg-new-trip animate-btn">
                    <span>CREATE A TRIP</span>
                </div>
            </a>
        </div>
    </div>
<% } %>

<%- include('../partials/footer') %>